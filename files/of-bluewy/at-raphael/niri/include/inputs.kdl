cursor {
   xcursor-theme "Bibata-Modern-Classic"
   xcursor-size 24
}

input {
   disable-power-key-handling

   keyboard {
      xkb {
         layout "bluewy,bluewy"
         variant "colemak_dh_wide_custom_eu_iso,vanilla_iso"
      }

      numlock
   }

   touchpad {
      tap
      natural-scroll
   }

   mouse {
      accel-profile "flat"
      accel-speed -0.75
   }
}
