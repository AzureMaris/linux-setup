#!/usr/bin/env nu

use ./lib [ steam_env proton_env mangohud_config_values ]

def --wrapped main [...command]: nothing -> nothing {
   with-env {
      ...$steam_env
      ...$proton_env

      MANGOHUD_CONFIG: (
         $mangohud_config_values
         | str join ','
      )

      STEAMDECK: 1
   } {
      exec mangohud game-performance ...$command
   }
}
