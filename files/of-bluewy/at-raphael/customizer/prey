#!/usr/bin/env nu

use ./lib [ steam_env proton_env get-mangohud-config-env ]

def --wrapped main [...command]: nothing -> nothing {
   with-env {
      ...$steam_env
      ...$proton_env
      ...(get-mangohud-config-env)
   } {
      exec gamescope-on-niri -s 0.25 --force-grab-cursor --mangoapp -- game-performance ...$command
   }
}
